<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">
    
    <TextView
        android:layout_width="wrap_content"
        android:text="Activity Name"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_margin="10dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id = "@+id/et_NEWACTIVITY_actvitiyName"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Activity Time"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_margin="10dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id = "@+id/et_NEWACTIVITY_actvitiyTime"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Activity Location"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_margin="10dp"
        android:layout_height="wrap_content" />
    <EditText
        android:id = "@+id/et_NEWACTIVITY_actvitiyLoc"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Tags"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_margin="10dp"
        android:layout_height="wrap_content" />
    <EditText
        android:id = "@+id/et_NEWACTIVITY_tags"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="match_parent"
        android:text="Submit New Activity"
        android:textSize="18sp"
        android:textColor="#000"
        android:id="@+id/bt_NEWACTIVITY_submit"
        android:layout_height="wrap_content" />

</LinearLayout>
